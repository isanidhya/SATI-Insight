
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow read access to all, but write access only for authenticated users to their own doc
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the new 'chats' collection
    match /chats/{chatId} {
      // Users can only read/write chat documents they are members of
      allow read, write: if request.auth != null && request.auth.uid in resource.data.members;

      // Rules for messages within a chat
      match /messages/{messageId} {
        // Users can read messages if they are part of the chat
        allow read: if request.auth != null && get(/databases/$(database)/documents/chats/$(chatId)).data.members.hasAny([request.auth.uid]);
        
        // Users can only create messages if they are part of the chat and are the sender
        allow create: if request.auth != null 
                      && get(/databases/$(database)/documents/chats/$(chatId)).data.members.hasAny([request.auth.uid])
                      && request.resource.data.senderId == request.auth.uid;

        // Don't allow updates or deletes to keep chat history immutable
        allow update, delete: if false;
      }
    }
  }
}
